<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="500px"
    android:background="@drawable/fundo"
    android:gravity="center"
    tools:context=".MyCameraActivity" >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
</LinearLayout>

<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageArquivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arquivo" />

        <TextView
            android:id="@+id/textArquivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Storage"
            android:textColor="#87F007" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lStorage"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@+id/lStorage"
        android:clickable="false"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera" />

        <TextView
            android:id="@+id/textCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:textColor="#87F007" />

    </LinearLayout>
  </LinearLayout>
</LinearLayout>
</RelativeLayout>