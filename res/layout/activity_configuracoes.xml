<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:columnCount="1"
    android:gravity="center_vertical|center_horizontal"
    android:rowCount="2"
    tools:context=".ConfiguracoesActivity" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:columnCount="2"
        android:rowCount="2" >

        <LinearLayout
            android:id="@+id/lconfigexercicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/imageusuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/exercicios" />

            <TextView
                android:id="@+id/textusuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercícios"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#87F007"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lconfigrepertorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/imageinstrutores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/repertorio" />

            <TextView
                android:id="@+id/textoinstrutores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repertório"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#87F007"
                android:textSize="14dp" />
        </LinearLayout>
    </GridLayout>

</RelativeLayout>