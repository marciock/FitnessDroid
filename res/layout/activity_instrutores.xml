<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fundo"
    android:columnCount="1"
    android:gravity="center_vertical|center_horizontal"
    android:rowCount="2"
    tools:context=".InstrutoresActivity" >

    
     <GridLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentTop="true"
	                
	                android:columnCount="2"
	                android:rowCount="2" >

	                <LinearLayout
	                    android:id="@+id/linstrutoresnovo"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="fill_horizontal"
	                    android:gravity="center"
	                    android:orientation="vertical"
	                    android:padding="10dp" >

	                    <ImageView
	                        android:id="@+id/inovosuario"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:src="@drawable/novoinstrutor" />

	                    <TextView
	                        android:id="@+id/tnovousuario"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="Novo"
	                        android:textAppearance="?android:attr/textAppearanceMedium"
	                        android:textColor="#87F007"
	                        android:textSize="14dp" />
	                </LinearLayout>

	                <LinearLayout
	                    android:id="@+id/linstrutoresoexcluir"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="fill_horizontal"
	                    android:gravity="center"
	                    android:orientation="vertical"
	                    android:padding="10dp" >

	                    <ImageView
	                        android:id="@+id/iexcluirinstrutores"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:src="@drawable/excluirinstrutor" />

	                    <TextView
	                        android:id="@+id/texcluirinstrutores"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="Excluir"
	                        android:textAppearance="?android:attr/textAppearanceMedium"
	                        android:textColor="#87F007"
	                        android:textSize="14dp" />
	                </LinearLayout>

	                <LinearLayout
	                    android:id="@+id/linstrutoreseditar"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="fill_horizontal"
	                    android:gravity="center"
	                    android:orientation="vertical"
	                    android:padding="10dp" >

	                    <ImageView
	                        android:id="@+id/ieditarinstrutores"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:src="@drawable/editarinstrutor" />

	                    <TextView
	                        android:id="@+id/teditarinstrutores"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="Editar"
	                        android:textAppearance="?android:attr/textAppearanceMedium"
	                        android:textColor="#87F007"
	                        android:textSize="14dp" />
	                </LinearLayout>

	                <LinearLayout
	                    android:id="@+id/linstrutoreslistar"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="fill_horizontal"
	                    android:gravity="center"
	                    android:orientation="vertical" 
	                    android:padding="10dp">

	                    <ImageView
	                        android:id="@+id/ilistarinstrutores"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:src="@drawable/listarinstrutor" />

	                    <TextView
	                        android:id="@+id/tlistarinstrutores"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="Listar"
	                        android:textAppearance="?android:attr/textAppearanceMedium"
	                        android:textColor="#87F007"
	                        android:textSize="14dp" />
	                </LinearLayout>

	            </GridLayout>
    
    
</RelativeLayout>