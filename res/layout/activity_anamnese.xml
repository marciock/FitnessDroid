<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
  	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fundo"
    android:columnCount="1"
    android:gravity="center_vertical|center_horizontal"
    android:rowCount="2"
    tools:context=".AnamneseActivity" >
    
     <GridLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentTop="true"
	                
	                android:columnCount="2"
	                android:rowCount="2" >

	                <LinearLayout
	                    android:id="@+id/lanamnesenovo"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="fill_horizontal"
	                    android:gravity="center"
	                    android:orientation="vertical"
	                    android:padding="10dp" >

	                    <ImageView
	                        android:id="@+id/inovoanamnese"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:src="@drawable/novoanamnese" />

	                    <TextView
	                        android:id="@+id/tnovoanamnese"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="Novo"
	                        android:textAppearance="?android:attr/textAppearanceMedium"
	                        android:textColor="#87F007"
	                        android:textSize="14dp" />
	                </LinearLayout>

	                <LinearLayout
	                    android:id="@+id/lanamneseexcluir"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="fill_horizontal"
	                    android:gravity="center"
	                    android:orientation="vertical"
	                    android:padding="10dp" >

	                    <ImageView
	                        android:id="@+id/iexcluiranamnese"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:src="@drawable/excluiranamnese" />

	                    <TextView
	                        android:id="@+id/texcluiranamnese"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="Excluir"
	                        android:textAppearance="?android:attr/textAppearanceMedium"
	                        android:textColor="#87F007"
	                        android:textSize="14dp" />
	                </LinearLayout>

	                <LinearLayout
	                    android:id="@+id/lanamneseeditar"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="fill_horizontal"
	                    android:gravity="center"
	                    android:orientation="vertical"
	                    android:padding="10dp" >

	                    <ImageView
	                        android:id="@+id/ieditaranamnese"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:src="@drawable/editaranamnese" />

	                    <TextView
	                        android:id="@+id/teditaranamnese"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="Editar"
	                        android:textAppearance="?android:attr/textAppearanceMedium"
	                        android:textColor="#87F007"
	                        android:textSize="14dp" />
	                </LinearLayout>

	                <LinearLayout
	                    android:id="@+id/lanamneselistar"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="fill_horizontal"
	                    android:gravity="center"
	                    android:orientation="vertical" 
	                    android:padding="10dp">

	                    <ImageView
	                        android:id="@+id/ilistaranamnese"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:src="@drawable/listaranamnese" />

	                    <TextView
	                        android:id="@+id/tlistaranamnese"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="Listar"
	                        android:textAppearance="?android:attr/textAppearanceMedium"
	                        android:textColor="#87F007"
	                        android:textSize="14dp" />
	                </LinearLayout>

	            </GridLayout>

</RelativeLayout>